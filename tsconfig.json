{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "src/*": ["src/*"],
        "types": ["src/types"]
      },
      "rootDirs": ["src"],
      "outDir": "./dist",
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }